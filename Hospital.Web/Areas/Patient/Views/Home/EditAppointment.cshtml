@model Hospital.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "EditAppointment";
}

<h1>EditAppointment</h1>

<h4>AppointmentViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" type="hidden" class="form-control">@Model.Id</label>              
            </div>
            <div class="form-group">
                <label asp-for="PatientId"  class="control-label"> @Model.PatientId</label> 
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointsStatus" class="control-label"></label>
                <select asp-for="AppointsStatus" class="form-control"></select>
                <span asp-validation-for="AppointsStatus" class="text-danger"></span>
            </div>
          
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

